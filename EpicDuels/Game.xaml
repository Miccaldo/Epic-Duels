<Window x:Class="EpicDuels.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpicDuels"
        mc:Ignorable="d"
        Title="start"
        Height="768"
        Width="1366"
        WindowStyle="None">

    <Window.Resources>
        <Style TargetType="local:Game">
            <Setter Property="Cursor" Value="Images\Background\cursor.cur"></Setter>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="STUN">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Margin" Value="{Binding StunMargin}"></Setter>
            <Setter Property="Visibility" Value="{Binding StunVisible}"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid>
                            <Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" StrokeThickness="2" Stroke="White" Fill="Gray"/>
                            <ContentPresenter Content="STUN" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Border}" x:Key="POISON">
            <Setter Property="BorderBrush" Value="DarkGreen"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="Margin" Value="{Binding PoisonMargin}"></Setter>
            <Setter Property="Visibility" Value="{Binding PoisonVisible}"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images/Background/poison.jpg" Stretch="Uniform" Opacity="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Grid}" x:Key="BURN">
            <Setter Property="Visibility" Value="{Binding BurnVisible}"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Margin" Value="{Binding PoisonMargin}"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images/Background/burn.png" Stretch="Uniform"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Grid}" x:Key="SLOW">
            <Setter Property="Visibility" Value="{Binding SlowVisible}"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Margin" Value="{Binding SlowMargin}"></Setter>
            <Setter Property="Opacity" Value="0.8"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images/Background/slow.png"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Rectangle}" x:Key="HPindicator">
            <Setter Property="Height" Value="{Binding HPindicator}"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="Fill">
                <Setter.Value>
                    <SolidColorBrush Color="#FFC92222" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="HP">
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
            <Setter Property="FontFamily" Value="Sylfaen"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="Margin" Value="0,7,7,0"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid Grid.Row="0">
                            <Ellipse StrokeThickness="3" Stroke="Black">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="Black" Offset="1"/>
                                        <GradientStop Color="#FFB04141" Offset="0.549"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <ContentPresenter Content="{Binding HP}" VerticalAlignment="Center"
                                              HorizontalAlignment="Center" Margin="0,0,0,1">
                            </ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="Name">
            <Setter Property="Grid.Row" Value="1"></Setter>
            <Setter Property="FontFamily" Value="Sylfaen"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid>
                            <Grid.Background>
                                <ImageBrush ImageSource="Images/background/cardName.jpg" Opacity="0.4"/>
                            </Grid.Background>
                            <ContentPresenter Content="{Binding Name}" HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                            </ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="Potion">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontFamily" Value="Sylfaen"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Width="100" Height="100" HorizontalAlignment="Center">
                            <Grid Margin="{TemplateBinding Margin}">
                                <Grid.Background>
                                    <ImageBrush ImageSource="{Binding BackgroundURL}"/>
                                </Grid.Background>
                            </Grid>
                            <ContentPresenter Margin="75,65,0,0" Content="{Binding Count}"></ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="EnemyGrid">
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"></Setter>
            <Setter Property="Margin" Value="{Binding MarginCharacter}"></Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <RotateTransform Angle="10"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="AssignButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Margin="2">
                            <Grid.Background>
                                <ImageBrush ImageSource="{Binding SourceUri}"/>
                            </Grid.Background>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.7"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Border}" x:Key="AssignBorder">
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="CornerRadius" Value="10"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="Images/Background/weaponBackground.jpg"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="AssignClickText">
            <Setter Property="Text" Value="KLIKNIJ"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontFamily" Value="Sylfaen"></Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="GameGrid">

        <Grid.Background>
            <ImageBrush ImageSource="Images/Background/tloD.jpg"/>
        </Grid.Background>

        <TextBlock Text="{Binding LocationName}" FontSize="100" Foreground="Black" HorizontalAlignment="Center" FontFamily="Sylfaen"/>

        <Grid x:Name="cardGrid" Width="890" Height="430" VerticalAlignment="Center" HorizontalAlignment="Center"
              Visibility="Visible">

            <Grid x:Name="heroGrid" HorizontalAlignment="Left" Height="350" Margin="{Binding MarginCharacter}"
                  VerticalAlignment="Center" Width="240" RenderTransformOrigin="0.5,0.5">

                <Grid.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-10"/>
                    </TransformGroup>
                </Grid.RenderTransform>

                <Grid Height="60" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Polygon Stroke="Black" StrokeThickness="2" Points="0 0 30 10 30 50 0 60" Fill="White"/>
                    <TextBlock RenderTransformOrigin="0.5,0.5" Margin="-7,0,-17,13" 
                           FontFamily="Sylfaen" FontWeight="Bold" FontSize="13" Text="attacks">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Text="{Binding NumberAttacks}" FontSize="30" FontFamily="Sylfaen" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </Grid>

                <Border x:Name="heroBorder" BorderBrush="{Binding BorderColor}" BorderThickness="2" >
                    <Border.Background>
                        <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                    </Border.Background>

                    <Grid>
                        <Rectangle Width="5" HorizontalAlignment="Right">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="White"/>
                                    <GradientStop Color="#FFFFD76C" Offset="{Binding XPindicator_2}"/>
                                    <GradientStop Color="White" Offset="{Binding XPindicator_1}"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}" Margin="0,0,5,0"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="320"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="White" Opacity="0.3"/>

                            <Label Grid.Row="0" FontSize="14" HorizontalContentAlignment="Center" FontWeight="Bold"
                                   FontFamily="Sylfaen" Content="{Binding HeroClassName}"/>
                        </Grid>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"></RowDefinition>
                                <RowDefinition Height="6.5*"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,-5,0,0">
                                <Label Content="{Binding Level}" FontSize="50" Foreground="White" FontFamily="Sylfaen" FontWeight="Bold"/>
                                <Label Content="{Binding Level}" FontSize="50" Foreground="Black" FontFamily="Sylfaen" />

                                <Label x:Name="STUNhero" Style="{DynamicResource STUN}" Height="20" Width="50"/>

                                <Border x:Name="POISONhero" Style="{DynamicResource POISON}" Height="27" Width="27">
                                    <Grid Background="#FF00B809" Opacity="0.5"/>
                                </Border>

                                <Grid x:Name="BURNhero" Style="{DynamicResource BURN}" Height="27" Width="27"/>

                                <Grid x:Name="SLOWhero" Style="{DynamicResource SLOW}" Width="27" Height="27"/>

                                <Label Style="{DynamicResource HP}" Height="50" Width="50" FontSize="16" Margin="0,7,10,0"></Label>

                            </Grid>

                            <Label Style="{DynamicResource Name}" Grid.Row="2"/>

                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="6*"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid x:Name="SkillGrid_1" Grid.Row="1">
                                <Border x:Name="Skill_1" BorderBrush="White" BorderThickness="2" CornerRadius="10"
                                    Margin="5" Width="100" MouseLeftButtonUp="SelectSkill_1" Visibility="Hidden" >
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="1"/>
                                            <GradientStop Color="{Binding SkillEnabled}"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <Label x:Name="SkillLabel_1" Foreground="White" HorizontalAlignment="Center" FontFamily="Sylfaen" />
                                </Border>
                            </Grid>

                            <Grid x:Name="SkillGrid_2" Grid.Row="1" Grid.Column="1" >
                                <Border x:Name="Skill_2" BorderBrush="White" BorderThickness="2" CornerRadius="10"
                                    Margin="5" Width="100" MouseLeftButtonUp="SelectSkill_2" Visibility="Hidden" >
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="1"/>
                                            <GradientStop Color="{Binding SkillEnabled}"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <Label x:Name="SkillLabel_2" Foreground="White" HorizontalAlignment="Center" FontFamily="Sylfaen"/>
                                </Border>
                            </Grid>

                            <Grid x:Name="SkillGrid_3" Grid.Row="2">
                                <Border x:Name="Skill_3" BorderBrush="White" BorderThickness="2" CornerRadius="10"
                                    Margin="5" Width="100" MouseLeftButtonUp="SelectSkill_3" Visibility="Hidden">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="1"/>
                                            <GradientStop Color="{Binding SkillEnabled}"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <Label x:Name="SkillLabel_3" Foreground="White" HorizontalAlignment="Center" FontFamily="Sylfaen"/>
                                </Border>
                            </Grid>

                            <Grid x:Name="SkillGrid_4" Grid.Row="2" Grid.Column="1">
                                <Border x:Name="Skill_4" BorderBrush="White" BorderThickness="2" CornerRadius="10"
                                    Margin="5" Width="100" MouseLeftButtonUp="SelectSkill_4" Visibility="Hidden" >
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="1"/>
                                            <GradientStop Color="{Binding SkillEnabled}"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <Label x:Name="SkillLabel_4" Foreground="White" HorizontalAlignment="Center" FontFamily="Sylfaen"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="oneAllEnemyGrid" Style="{StaticResource EnemyGrid}" Visibility="Visible" Height="350"
                 VerticalAlignment="Center" Width="240" MouseLeftButtonUp="SelectOneEnemy">

                <Label x:Name="STUNoneEnemy" Style="{DynamicResource STUN}" Height="20" Width="50"/>

                <Border x:Name="POISONoneEnemy" Style="{DynamicResource POISON}" Height="27" Width="27">
                    <Grid Background="#FF00B809" Opacity="0.5"/>
                </Border>

                <Grid x:Name="BURNoneEnemy" Style="{DynamicResource BURN}" Height="27" Width="27"/>
                <Grid x:Name="SLOWoneEnemy" Style="{DynamicResource SLOW}" Width="27" Height="27"/>

                <Grid x:Name="BossGrid" Height="60" Width="30" HorizontalAlignment="Right"
                      VerticalAlignment="Center" Visibility="{Binding BossVisibility}">
                    <Polygon Stroke="Black" StrokeThickness="2" Points="30 60 30 0 0 10 0 50" Fill="Gold"/>
                    <TextBlock RenderTransformOrigin="0.5,0.5" Margin="0,0,-40,0" 
                           FontFamily="Sylfaen" FontWeight="Bold" FontSize="16" Text="BOSS" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-90"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>

                <Border x:Name="oneEnemyBorder" BorderBrush="{Binding BorderColor}" BorderThickness="2">
                    <Border.Background>
                        <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                    </Border.Background>

                    <Grid x:Name="oneEnemyGrid">

                        <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8*"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Label Style="{DynamicResource HP}" Height="50" Width="50" FontSize="16"></Label>
                            <Label Style="{DynamicResource Name}" FontSize="20"></Label>

                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="twoAllEnemiesGrid" Visibility="Hidden">

                <Grid x:Name="twoEnemiesGrid_1" Style="{StaticResource EnemyGrid}" Height="200"
                        VerticalAlignment="Top" Width="140" MouseLeftButtonUp="SelectTwoEnemies_1">

                    <Label x:Name="STUNtwoEnemies" Style="{DynamicResource STUN}" Width="35" Height="15" FontSize="8"/>

                    <Border x:Name="POISONtwoEnemy_1" Style="{DynamicResource POISON}" Height="20" Width="20">
                        <Grid Background="#FF00B809" Opacity="0.5"/>
                    </Border>

                    <Grid x:Name="BURNtwoEnemy_1" Style="{DynamicResource BURN}" Height="20" Width="20"/>
                    <Grid x:Name="SLOWtwoEnemy_1" Style="{DynamicResource SLOW}" Width="20" Height="20"/>

                    <Border x:Name="twoEnemiesBorder_1" BorderBrush="{Binding BorderColor}" BorderThickness="1.5">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                        </Border.Background>

                        <Grid>
                            <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="7*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Style="{DynamicResource HP}" Height="35" Width="35"></Label>
                                <Label Style="{DynamicResource Name}"></Label>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="twoEnemiesGrid_2" Style="{StaticResource EnemyGrid}" Height="200"
                        VerticalAlignment="Bottom" Width="140" MouseLeftButtonUp="SelectTwoEnemies_2">

                    <Label x:Name="STUNtwoEnemy_1" Style="{DynamicResource STUN}" Width="35" Height="15" FontSize="8"/>

                    <Border x:Name="POISONtwoEnemy_2" Style="{DynamicResource POISON}" Height="20" Width="20">
                        <Grid Background="#FF00B809" Opacity="0.5"/>
                    </Border>

                    <Grid x:Name="BURNtwoEnemy_2" Style="{DynamicResource BURN}" Height="20" Width="20"/>

                    <Grid x:Name="SLOWtwoEnemy_2" Style="{DynamicResource SLOW}" Width="20" Height="20"/>

                    <Border x:Name="twoEnemiesBorder_2" BorderBrush="{Binding BorderColor}" BorderThickness="1.5">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                        </Border.Background>
                        <Grid>
                            <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="7*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Style="{DynamicResource HP}" Height="35" Width="35"></Label>
                                <Label Style="{DynamicResource Name}"></Label>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <Grid x:Name="threeAllEnemiesGrid" Visibility="Hidden">

                <Grid x:Name="threeEnemiesGrid_1" Style="{StaticResource EnemyGrid}" Height="200"
                       VerticalAlignment="Top" Width="140" MouseLeftButtonUp="SelectThreeEnemies_1">

                    <Label x:Name="STUNthreeEnemy_1" Style="{DynamicResource STUN}" Height="15" Width="35" FontSize="8"/>

                    <Border x:Name="POISONthreeEnemy_1" Style="{DynamicResource POISON}" Height="20" Width="20">
                        <Grid Background="#FF00B809" Opacity="0.5"/>
                    </Border>

                    <Grid x:Name="BURNthreeEnemy_1" Style="{DynamicResource BURN}" Height="20" Width="20"/>

                    <Grid x:Name="SLOWthreeEnemy_1" Style="{DynamicResource SLOW}" Width="20" Height="20"/>

                    <Border x:Name="threeEnemiesBorder_1" BorderBrush="{Binding BorderColor}" BorderThickness="1.5">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                        </Border.Background>
                        <Grid>
                            <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Style="{DynamicResource HP}" Height="35" Width="35"></Label>
                                <Label Style="{DynamicResource Name}"></Label>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="threeEnemiesGrid_2" Style="{StaticResource EnemyGrid}" Height="200"
                        VerticalAlignment="Bottom" Width="140" MouseLeftButtonUp="SelectThreeEnemies_2">

                    <Label x:Name="STUNthreeEnemy_2" Style="{DynamicResource STUN}" Height="15" Width="35" FontSize="8"/>

                    <Border x:Name="POISONthreeEnemy_2" Style="{DynamicResource POISON}" Height="20" Width="20">
                        <Grid Background="#FF00B809" Opacity="0.5"/>
                    </Border>

                    <Grid x:Name="BURNthreeEnemy_2" Style="{DynamicResource BURN}" Height="20" Width="20"/>

                    <Grid x:Name="SLOWthreeEnemy_2" Style="{DynamicResource SLOW}" Width="20" Height="20"/>

                    <Border x:Name="threeEnemiesBorder_2" BorderBrush="{Binding BorderColor}" BorderThickness="1.5">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                        </Border.Background>
                        <Grid>
                            <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Style="{DynamicResource HP}" Height="35" Width="35"></Label>
                                <Label Style="{DynamicResource Name}"></Label>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="threeEnemiesGrid_3" Style="{StaticResource EnemyGrid}" Height="200"
                    VerticalAlignment="Center" Width="135" MouseLeftButtonUp="SelectThreeEnemies_3">

                    <Label x:Name="STUNthreeEnemy_3" Style="{DynamicResource STUN}" Height="15" Width="35" FontSize="8"/>

                    <Border x:Name="POISONthreeEnemy_3" Style="{DynamicResource POISON}" Height="20" Width="20">
                        <Grid Background="#FF00B809" Opacity="0.5"/>
                    </Border>

                    <Grid x:Name="BURNthreeEnemy_3" Style="{DynamicResource BURN}" Height="20" Width="20"/>
                    <Grid x:Name="SLOWthreeEnemy_3" Style="{DynamicResource SLOW}" Width="20" Height="20"/>

                    <Border x:Name="threeEnemiesBorder_3" BorderBrush="{Binding BorderColor}" BorderThickness="1.5">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding BorderFillColor}" Opacity="{Binding BorderOpacity}"/>
                        </Border.Background>
                        <Grid>
                            <Rectangle Height="{Binding HPindicator}" Style="{DynamicResource HPindicator}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Label Style="{DynamicResource HP}" Height="35" Width="35"></Label>
                                <Label Style="{DynamicResource Name}"></Label>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <TextBlock HorizontalAlignment="Center" Margin="0,0,10,80" TextWrapping="Wrap" Text="vs" FontStyle="Italic"
                       VerticalAlignment="Center" TextElement.FontFamily ="Resources/#Vinque" FontSize="130" Width="Auto"/>

            <Grid x:Name="TURNgrid" HorizontalAlignment="Center" VerticalAlignment="Top"
                  Margin="0,30,180,0" Height="50" Width="180">
                <TextBlock Height="40" Width="120" TextElement.FontFamily ="Resources/#Vinque" FontSize="25" FontWeight="Bold" Text="TURA: "/>
                <TextBlock Height="40" Width="50" TextElement.FontFamily ="Resources/#Vinque" FontSize="25" FontWeight="Bold" Text="{Binding Turn}" Margin="110,0,0,0"/>
            </Grid>
            <Grid x:Name="LEVELgrid" HorizontalAlignment="Center" VerticalAlignment="Top"
                  Margin="195,30,0,0" Height="50" Width="140">
                <TextBlock Height="40" Width="130" TextElement.FontFamily ="Resources/#Vinque" FontWeight="Bold" FontSize="25" Text="LEVEL: "/>
                <TextBlock Height="40" Width="50" TextElement.FontFamily ="Resources/#Vinque" FontWeight="Bold" FontSize="25" Text="{Binding Level}" Margin="95,5,-32,5"/>
            </Grid>

            <Grid>
                <Button x:Name="AttackButton" Content="Atakuj!" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,150,0,0" FontSize="38" TextElement.FontFamily ="Resources/#Vinque" IsEnabled="False"
                        Click="Attack_Click" FontStyle="Italic" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Stroke="Black" StrokeThickness="5" Height="60" Width="180"
                                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="1"/>
                                            <GradientStop Color="#FFB04141" Offset="0.549"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,8,2"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

